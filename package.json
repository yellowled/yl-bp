{
    "name": "yl-bp",
    "description": "HTML/SCSS/JS boilerplate",
    "version": "4.2.0",
    "homepage": "https://github.com/yellowled/yl-bp",
    "author": {
        "name": "Matthias Mees",
        "url": "https://yellowled.de"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/yellowled/yl-bp.git"
    },
    "bugs": {
        "url": "https://github.com/yellowled/yl-bp/issues"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "scripts": {
        "build": "npm-run-all --parallel html:build srv:build css:build js:build svg:build",
        "clean": "del-cli dist/",
        "clean:up": "del-cli src/css/ src/js/ src/img/sprite.svg dist/",
        "css:build": "npm-run-all --sequential css:lint css:compile css:prefix css:minify",
        "css:compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 5 src/scss/main.scss src/css/main.css",
        "css:lint": "stylelint --syntax scss \"src/scss/**/*.scss\"",
        "css:minify": "mkdirp dist/css/ && cleancss --level 1 --source-map --source-map-inline-sources --output dist/css/main.css src/css/main.css",
        "css:prefix": "postcss --config .postcssrc --replace \"src/css/*.css\" \"!src/css/*.min.css\"",
        "css:watch": "onchange \"src/scss/**/*.scss\" -i -- npm run css:compile",
        "html:build": "html-minifier -c .htmlminifierrc --input-dir src --output-dir dist --file-ext html",
        "html:lint": "htmlhint src/*.html",
        "js:build": "npm-run-all --sequential js:lint js:compile js:minify",
        "js:bundle": "uglifyjs --comments \"/^!/\" --source-map \"url=main.js.map\" --output src/js/main.js -- node_modules/svg4everybody/dist/svg4everybody.js src/js/bundle.js",
        "js:compile": "npm-run-all --sequential js:prefix js:bundle",
        "js:lint": "eslint src/scripts/**/*",
        "js:minify": "mkdirp dist/js/ && uglifyjs --compress --mangle --comments \"/^!/\" --source-map \"content=src/js/main.js.map,includeSources,url=main.js.map\" --output dist/js/main.js -- src/js/main.js",
        "js:prefix": "mkdirp src/js/ && babel src/scripts/ --out-file src/js/bundle.js",
        "js:watch": "onchange \"src/scripts/**/*.js\" -i -- npm run js:compile",
        "lint": "npm-run-all --parallel html:lint css:lint js:lint",
        "serve": "browser-sync start --config .bs-config.js",
        "start": "npm run watch",
        "srv:build": "copyfiles -u 2 src/srv/* src/srv/.htaccess dist/",
        "svg:build": "npm-run-all --sequential svg:compile svg:minify",
        "svg:compile": "mkdirp src/img/ && svgstore -o src/img/sprite.svg src/icons/**/*.svg",
        "svg:minify": "mkdirp dist/img/ && svgo --config=.svgorc src/img/sprite.svg -o dist/img/sprite.svg",
        "svg:watch": "onchange \"src/icons/**/*.svg\" -i -- npm run svg:compile",
        "test": "npm run lint",
        "watch": "npm-run-all --parallel css:watch js:watch svg:watch serve"
    },
    "dependencies": {
        "node-normalize-scss": "^8.0.0",
        "svg4everybody": "^2.1.9"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.4.0",
        "@babel/preset-env": "^7.4.2",
        "autoprefixer": "^9.5.0",
        "browser-sync": "^2.26.3",
        "clean-css-cli": "^4.2.1",
        "copyfiles": "^2.1.0",
        "del-cli": "^1.1.0",
        "eslint": "^5.15.3",
        "eslint-plugin-compat": "^3.0.1",
        "html-minifier": "^3.5.21",
        "htmlhint": "^0.11.0",
        "mkdirp": "^0.5.1",
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.5",
        "onchange": "^5.2.0",
        "postcss-cli": "^6.1.2",
        "postcss-flexbugs-fixes": "^4.1.0",
        "postcss-focus-within": "^3.0.0",
        "stylelint": "^9.10.1",
        "stylelint-config-prettier": "^5.0.0",
        "stylelint-config-recommended-scss": "^3.2.0",
        "stylelint-config-standard": "^18.2.0",
        "stylelint-scss": "^3.5.4",
        "svgo": "^1.2.0",
        "svgstore-cli": "^1.3.1",
        "uglify-js": "^3.5.2"
    }
}
