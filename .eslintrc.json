{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "plugins": ["compat"],
    "extends": ["eslint:recommended"],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "compat/compat": "error"
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
